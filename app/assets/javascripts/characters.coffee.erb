$(document).ready ->
  if $("#characters_new, #characters_edit, #characters_show").length > 0
    setValidationCheck()
  if $("#characters_show").length > 0
    set_event_edit_modals()
    
    $("#edit_name_modal").on "show.bs.modal", (event) ->
      button = $(event.relatedTarget) 
      modal = $(this)
      modal.find(".action").text(button.data("action")) if button.data("action")
      $.get button.data("e-url"), (data) ->
        modal.find(".modal-body").html(data)
    
    