/! Wrap the rest of the page in another container to center all the content.
.container.marketing
  /! Three columns of text below the carousel
  .row
    h1 How do I get started?
    .col-md-4
      =image_tag "octopus-1.png"
      h2 Sign up!
      p
        = link_to "Sign up now", new_user_registration_path, class: "btn btn-primary"
        br
        small=link_to "Or sign in", new_user_session_path
    /! /.col-lg-4
    .col-md-4
      =image_tag "octopus-2.png"
      h2 Confirm email!
      p= link_to "Resend confirmation email", new_user_confirmation_path, class: "btn btn-default"
    /! /.col-lg-4
    .col-md-4
      =image_tag "octopus-3.png"
      h2 Start building worlds!
      p= link_to "Learn how to use Kronografi &raquo;".html_safe, welcome_help_path, class: "btn btn-default"
